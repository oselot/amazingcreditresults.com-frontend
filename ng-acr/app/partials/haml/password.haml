.col-lg-4.col-lg-offset-4.col-xs-12
  %h4.text-center Welcome to Amazing Credit Results
  .alert.alert-success(ng-bind="form.message" ng-show="form.message")
  %a(href="/#/login" ng-if="!form.show") Back to Login
  %form(ng-submit="form.resetPassword()" ng-if='form.show')
    .alert.alert-danger(ng-bind="form.message" ng-show="form.message")
    .form-group
      %label(for="username") Username
      %input#username.form-control(type="text" ng-model="form.model.username" tabindex="2")
    .form-group
      %a(href="/#/login") Back to Login
      %input.btn.btn-success.pull-right(type="submit" value="Login" tabindex="4")
