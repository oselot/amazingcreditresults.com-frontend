.col-lg-4.col-lg-offset-4.col-xs-12
  %h4.text-center Welcome to Amazing Credit Results
  .alert.alert-success(ng-bind="form.message" ng-show="form.message")
  %form(ng-submit="form.setPassword()" ng-if='!form.passwordSet')
    .alert.alert-danger(ng-bind="form.message" ng-show="form.message")
    .form-group
      %label(for="pw") Password
      %input#pw.form-control(type="password" ng-model="form.model.password" tabindex="2")
    .form-group.text-center
      %input.btn.btn-success(type="submit" value="Login" tabindex="4")
